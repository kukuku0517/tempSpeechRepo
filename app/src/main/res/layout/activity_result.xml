<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="handler"
            type="com.google.cloud.android.speech.View.RecordResult.ResultHandler" />

        <variable
            name="time"
            type="com.google.cloud.android.speech.Data.DTO.MediaTimeDTO" />
    </data>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.google.cloud.android.speech.View.RecordResult.RecordResultActivity">

        <android.support.design.widget.CoordinatorLayout
            android:id="@+id/cl_result"

            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <android.support.design.widget.AppBarLayout
                android:id="@+id/app_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/colorPrimary"
                android:theme="@style/ThemeOverlay.AppCompat.Dark">

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/colorPrimary"
                    android:paddingLeft="32dp"
                    android:paddingRight="32dp">


                </android.support.v7.widget.Toolbar>


            </android.support.design.widget.AppBarLayout>

            <android.support.v7.widget.RecyclerView

                android:id="@+id/rv_record_result"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:paddingBottom="@dimen/spacing_small"
                android:paddingTop="@dimen/spacing_small"
                app:layout_behavior="@string/appbar_scrolling_view_behavior" />
        </android.support.design.widget.CoordinatorLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/cl_result">

            <ImageButton
                android:id="@+id/btn_play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:onClick="@{handler::onClickStart}"
                app:srcCompat="@drawable/ic_play_arrow_black_24dp" />

            <ImageButton
                android:id="@+id/btn_stop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/btn_play"
                android:onClick="@{handler::onClickStop}"
                app:srcCompat="@drawable/ic_stop_black_24dp" />

            <ImageButton
                android:id="@+id/btn_restart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/btn_stop"
                android:onClick="@{handler::onClickRestart}"
                app:srcCompat="@drawable/ic_stop_black_24dp" />

            <SeekBar
                android:id="@+id/sb_navigate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/btn_play" />

            <TextView
                android:id="@+id/tv_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/sb_navigate"
                android:text="@{time.total}"

                />

            <TextView
                android:id="@+id/tv_now"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/sb_navigate"
                android:layout_toRightOf="@id/tv_total"
                android:text="@{time.now}" />


        </RelativeLayout>


    </RelativeLayout>

</layout>