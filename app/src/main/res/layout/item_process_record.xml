<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="record"
            type="com.google.cloud.android.speech.Data.DTO.RecordDTO"/>
        <variable
            name="handler"
            type="com.google.cloud.android.speech.View.RecordList.ProcessHandler"/>
    </data>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:orientation="vertical">

        <RelativeLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/recordTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{record.title}"
                android:textStyle="bold"
                android:padding="4dp"
                tools:text="171013_marketing_lecture" />

            <TextView
                android:id="@+id/recording"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="●"
                android:layout_alignParentRight="true"
                android:textColor="@android:color/holo_red_dark"
                android:textStyle="bold"
                android:padding="4dp" />
            <TextView
                android:id="@+id/recordDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/recordTitle"
                android:text="@{record.startMillis}"
                android:padding="4dp"
                android:layout_marginRight="4dp"
                tools:text="2017/10/13" />

            <TextView
                android:id="@+id/recordDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/recordTitle"
                android:layout_toRightOf="@id/recordDate"
                android:padding="4dp"
                android:text="@{record.duration}"

                android:layout_marginRight="4dp"
                tools:text="00:31" />


            <TextView
                android:id="@+id/recordTag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/recordTitle"
                android:padding="4dp"
                android:textColor="#fff"
                android:layout_toRightOf="@id/recordDuration"
                android:text="@{record.tagList[0]}"
                tools:text="Marketing / Lecture"
                android:background="@drawable/layout_round"/>

            <ImageButton
                android:layout_alignParentRight="true"
                android:layout_below="@id/recordTag"
                android:id="@+id/imageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="@{(v)-> handler.onClickStopRecord(v)}"
                app:srcCompat="@mipmap/ic_launcher" />


        </RelativeLayout>
    </android.support.v7.widget.CardView>

</layout>
